// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id     Int             @id @default(autoincrement())
  name   String
  amount Float
  unit   MeasurementUnit
  expiry String?
  storage StorageType
}

enum MeasurementUnit {
  g
  kg
  l
  ml
  unit
}

enum StorageType {
  fridge
  freezer
  pantry
  spices
}
